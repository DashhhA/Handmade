<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/auth_navigation"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.market.handmades.ui.auth.AuthFragment"
        android:label="@string/login_title" >
        <action
            android:id="@+id/action_authFragment_to_newUserFragment"
            app:destination="@id/newUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/newUserFragment"
        android:name="com.market.handmades.ui.auth.NewUserFragment"
        android:label="@string/new_usr_title" />
</navigation>