<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/l_card"
        android:layout_height="match_parent"
        android:layout_width="400dp"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="1"
        app:cardCornerRadius="24dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="24dp">
                <ImageView
                    android:id="@+id/l_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/placeholder"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/l_name"
                style="@style/AppTheme.Text.StandardUI"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="14dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/l_price"
                style="@style/AppTheme.Text.StandardUI"
                android:textColor="@color/mark"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="4dp"/>

            <ToggleButton
                android:id="@+id/l_cart"
                android:layout_weight="0.1"
                android:background="@drawable/btn_selector"
                android:textOff="@string/to_cart"
                android:textOn="@string/from_cart" />
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/r_card"
        android:layout_height="match_parent"
        android:layout_width="400dp"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="1"
        app:cardCornerRadius="24dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="24dp">
                <ImageView
                    android:id="@+id/r_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/placeholder"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/r_name"
                style="@style/AppTheme.Text.StandardUI"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="14dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/r_price"
                style="@style/AppTheme.Text.StandardUI"
                android:textColor="@color/mark"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="4dp"/>

            <ToggleButton
                android:id="@+id/r_cart"
                android:layout_weight="0.1"
                android:background="@drawable/btn_selector"
                android:textOff="@string/to_cart"
                android:textOn="@string/from_cart" />
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>